<div class="burger-title">
  <h1>Nom Nom Burgers!</h1>
</div>

<div class="burger-img-div">
  <img src="/assets/img/burger-1.png" alt="burger icon">
</div>

<div class="burger-container">

  <div class="new-burgers">
    <h2>Burgers fresh off the grill!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="burger-form">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger-name">Burger Name:</label>
        <input type="text" id="burger-name" name="name">
      </div>

      <button id="submit-button" type="submit">Add Burger</button>
    </form>
    <br>
  </div>
  
  <div class="eaten-burgers">
    <h2>Burgers that have been devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>

  </div>

</div>

